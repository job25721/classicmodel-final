   <!-- filter srcipt -->
   <script type="text/javascript">
      $(document).ready(() => {
         $.ajax({
            url: 'scaleFilter',
            type: 'GET',
            dataType: 'json',
            success: (data) => {
               var text;
               text = "";

               $.each(data, function (index, obj) {

                  text += '<label class="container">'
                  text += '<input type="checkbox" class="scaleFilter">'
                  text += '<span class="checkmark"></span>'
                  text += '  '
                  text += obj.productScale
                  text += '</label>'
               });
               $('#scalefilter').html(text);

            },
         });

         $.ajax({
            url: 'vendorFilter',
            type: 'GET',
            dataType: 'json',
            success: (data) => {
               var text;
               text = "";
               $.each(data, function (index, obj) {
                  text += '<label class="container">'
                  text += '<input type="checkbox">'
                  text += '<span class="checkmark"></span>'
                  text += '  '
                  text += obj.productVendor
                  text += '</label>'
               });
               $('#vendorfilter').html(text);
            },
         });

      });

      $(document).ajaxError(() => {
         $('#demo').html('Error: unknown ajaxError!');
      });
   </script>

