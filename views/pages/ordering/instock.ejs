                    </div>
                    <div style="font-size: 40px;" id="demo"></div>
                    <div style="font-size: 25px;" class="txt-heading">Your Cart have <div style="display: inline ;font-size: 30px; "
                            id="quantity-product"> </div>
                           
                        products  <div style="display: inline ;font-size: 30px; "id="piece-product"> </div> pieces </div>
                        <div style="font-size: 25px;">
                    <a id="btnCheckout" href="cartitem">See Your Cart</a> <br>
                    <a id="btnEmpty" href="emptycart">Empty Cart</a>
                </div>
                    <table class="table text-center table-striped" id="dataTable" width="100%" cellspacing="0"
                        style="border: black;">
                        <thead>
                            <tr>
                                <th>ProductImage</th>
                                <th>ProductName</th>
                                <th>ProductScale</th>
                                <th>ProductVendor</th>
                                <th>QuantityInStock</th>
                                <th>BuyPrice</th>

                            </tr>
                            <% for(var i=0; i < productData.length; i++) { %>
                            <div class="product-item">
                                <tr>


                                    <td class="product-img"><img style="display: block;" width="50px" height="50px"
                                            src="/img/<%= productData[i].imgSrc %>" alt="NotFound"></td>
                                    <td class="product-name"><%= productData[i].productName %></td>
                                    <td class="product-scale"><%= productData[i].productScale %></td>
                                    <td class="product-vendor"><%= productData[i].productVendor %> </td>
                                    <td class="product-vendor"><%= productData[i].quantityInStock %> </td>
                                    <td class="product-price"><%= productData[i].buyPrice %> </td>

                                    <td>
                                        <form id="<%= productData[i].productCode %>" method="POST" action="/addItem">
                                            <input type="text" class="product-quantity" name="quantity" value="1"
                                                size="2" />
                                            <input type="hidden" name="code"
                                                value="<%= productData[i].productCode %>" />
                                            <input type="submit" value="Add to Cart" class="btnAdd" /></form>
                                    </td>

                                </tr>
                            </div>
                            <% } %>

                        </thead>
                        <tbody id="instockData"></tbody>
                    </table>

                </div>
            </div>

