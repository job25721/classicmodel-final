    <script type="text/javascript">
        $(document).ready(function () {
            $.ajax({
                url: 'addItem',
                type: 'POST',
                dataType: 'json',
                success: (data) => {
                    $('#quantity-product').html(data[0].row)
                    $('#piece-product').html(data[1].piece)
                }

            });
            
            $.ajax({
                url: 'fetchDetails',
                type: 'GET',
                dataType: 'json',
                success: (data) => {
                    name = data[0].firstName + " " + data[0].lastName
                    role = data[0].jobTitle
                    $('#empName').html(name)
                    $('#empRole').html(role)
                }

            });





            /* $.post("addItem", {
                 quantity : "10" , code : "S10_1949"
             }, function (data) {
                 console.log(data[0].name); 
                 
             }, "json");*/
            $(".btnAdd").click(function () {

                $.ajax({
                    type: "POST",
                    url: "addItem",
                    data: $(this).parent().serialize(),
                    success: function (data) {
                        //  alert(JSON.parse(JSON.stringify(data.result[0].name + " "+data.result[0]. ))); 
                        $('#quantity-product').html(data[0].row)
                        $('#piece-product').html(data[1].piece)
                    }
                });
                return false; // avoid to execute the actual form submission.


            });















        })

       
            
        
    </script>

