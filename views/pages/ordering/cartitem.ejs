    <script type="text/javascript">
        $(document).ready(function () {
            
            
            $.ajax({
                url: 'fetchDetails',
                type: 'GET',
                dataType: 'json',
                success: (data) => {
                    name = data[0].firstName + " " + data[0].lastName
                    role = data[0].jobTitle
                    $('#empName').html(name)
                    $('#empRole').html(role)
                }

            });
        })

       
            
        
    </script>

